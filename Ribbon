PaymentServiceRibbonApplication.java
package com.pack.PaymentServiceRibbon;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.cloud.netflix.eureka.EnableEurekaClient;

@SpringBootApplication
@EnableEurekaClient
public class PaymentServiceRibbonApplication {

	public static void main(String[] args) {
		SpringApplication.run(PaymentServiceRibbonApplication.class, args);
	}

}


PaymentController.java
package com.pack.PaymentServiceRibbon.controller;

import org.springframework.beans.factory.annotation.Value;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/payment-provider")
public class PaymentController {
	@Value("${server.port}")
	private int port;

	@GetMapping("/payNow/{price}")
	public String payNow(@PathVariable int price) {
		return "payment with " + price + " is successfull & service port : " + port;
	}

}
